<h1>失蹤兒童</h1>
<ul>
<% @img.each_with_index do |img, index| %>
  <li><%= image_tag img['src'] %>
    <ul>
      <% @items[index].map do |item| %>
      <li><%= item %></li>
      <% end %>
    </ul>
  </li>

<% end %>
</ul>
<ul>
  <% @childs.each do |child| %>
  <li><ul>
    <li><%= child %></li>
  </ul></li>
  <% end %>
</ul>